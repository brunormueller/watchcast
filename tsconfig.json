  "compilerOptions": {
    "target": "ES2021",
    "module": "commonjs",
    "moduleResolution": "node",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "outDir": "dist",
    "baseUrl": "./",
    "resolveJsonModule": true,
    "types": [
      "@types/node"
    ]
  },
  "include": [
    "src",
    "types"
  ]
}